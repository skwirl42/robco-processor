{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Assembler Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/assembler",
            "args": ["${workspaceFolder}/test/unresolved_symbols.asm"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Compiler Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/compiler",
            "args": ["${workspaceFolder}/source/include/syscall.h"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Debug Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/robcoterm",
            "args": ["${workspaceFolder}/font/robco-termfont.png"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}