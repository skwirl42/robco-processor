{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Assembler Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/assembler",
            "args": ["-I", "samples/", "-S", "${workspaceFolder}/samples/graphics_test.asm"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Debug Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/robcoterm",
            "args": [
                "-F", "${workspaceFolder}/font/robco-termfont.png",
                "-T", "${workspaceFolder}/graphics_test.holo",
                "-X"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Tape Manager Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tapemanager",
            "args": ["-T", "test.holo", "-C", "erase"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Sound Keyboard Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/sound_keyboard",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}